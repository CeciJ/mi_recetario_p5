{% extends "base.html.twig" %}

{% block title 'Voir toutes mes recettes' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block body %}
    <div class="recipesIndex">
        <div class="jumbotron">
            <div class="container">
                {{ form_start(form) }}
                <div class="form-row align-items-end">
                    <div class="col-md-2 col-6">
                        {{ form_row(form.maxTotalTime) }}
                    </div>
                    <div class="col-md-2 col-6">
                        {{ form_row(form.numberPersons) }}
                    </div>
                    <div class="col-md-2 col-6">
                        {{ form_row(form.DishTypes) }}
                    </div>
                    <div class="col-md-2 col-6">
                        {{ form_row(form.foodTypes) }}
                    </div>
                    <div class="col-md-2 col-6">
                        {{ form_row(form.options) }}
                    </div>
                    <div class="col-md-2 col-6">
                        <div class="form-group">
                            <button class="btn btn-primary">Rechercher</button>
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>

        <div class="container mt-4">
            <h1 class="h1 allRecipes">Toutes mes recettes</h1>

            <div class="allRecipes">
                {% for recipe in recipes %}
                    {% include "recipe/_recipe.html.twig" %}
                {% endfor %}
            </div>

            <div class="pagination">
                {{ knp_pagination_render(recipes) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('allRecipes') }}
{% endblock %}