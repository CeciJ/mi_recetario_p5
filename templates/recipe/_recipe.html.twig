<div class="card mb-4">
    {% if recipe.picture %}
        <img src="{{ vich_uploader_asset(recipe.picture, "imageFile") | imagine_filter('thumb') }}" style="width: 100%; heigth: auto;" alt="card-img-top">
    {% else %}
        <img src="{{ "empty.jpg" | imagine_filter('thumb') }}" style="width: 100%; heigth: auto;" alt="card-img-top">
    {% endif %}
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('recipe.show', {id: recipe.id, slug: recipe.slug}) }}">{{ recipe.name }}</a>
        </h5>
        <p class="card-text">Temps total de pr√©paration : {{ recipe.totalTime }} minutes</p>
        <p class="card-text">Nombre de personnes : {{ recipe.numberPersons }}</p>
    </div>
</div>