<div class="card mb-4 recipeCard">
    {% if recipe.picture %}
        <img src="{{ vich_uploader_asset(recipe.picture, "imageFile") | imagine_filter('thumb') }}" alt="card-img-top">
    {% else %}
        <img src="{{ "empty.jpg" | imagine_filter('thumb') }}" alt="card-img-top">
    {% endif %}
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('recipe.show', {id: recipe.id, slug: recipe.slug}) }}">{{ recipe.name }}</a>
        </h5>
        <p class="card-text">
            {% for dishType in recipe.DishTypes %}
                {{ dishType.name }}
            {% endfor %}
        <br>
        {{ recipe.totalTime }} minutes<br>
        {{ recipe.numberPersons }} {% if recipe.numberPersons > 1 %} personnes {% else %} personne {% endif %}</p>
    </div>
</div>