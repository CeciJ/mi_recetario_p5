{{ form_start(form) }}
    <div class="row">
        <div class="col-md-4">{{ form_row(form.name) }}</div>
    </div>
    <div class="row">
        <div class="col-md-4">{{ form_row(form.category) }}</div>
        <div class="col-md-4">{{ form_row(form.foodType) }}</div>
    </div>
    <div class="row">
        <div class="col-md-4">{{ form_row(form.totalTime) }}</div>
        <div class="col-md-4">{{ form_row(form.preparationTime) }}</div>
        <div class="col-md-4">{{ form_row(form.cookingTime) }}</div>
    </div>
    <div class="row">
        <div class="col-md-4">{{ form_row(form.cost) }}</div>
        <div class="col-md-4">{{ form_row(form.difficulty) }}</div>
        <div class="col-md-4">{{ form_row(form.numberPersons) }}</div>
    </div>
    {{ form_rest(form) }}
    <button class="btn btn-primary">{{ button|default('Enregistrer') }}</button>
{{ form_end(form) }}