{% extends "base.html.twig" %}

{% block title 'Gérer les recettes' %}

{% block body %}
    <div class="container mt-4">
        <h1>Gérer les recettes</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        <table class="table table-stripped">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for recipe in recipes %}
                <tr>
                    <td>{{ recipe.name }}</td>
                    <td>
                        <a href="{{ path('admin.recipe.edit', {id: recipe.id}) }}" class="btn btn-secondary">Éditer</a>    
                        <form method="post" action="{{ path('admin.recipe.delete', {id: recipe.id}) }}" style="display:inline-block;" onsubmit="return confirm('Êtes-vous bien sûr?')">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recipe.id) }}">
                            <button class="btn btn-danger">Supprimer</button>
                        </form>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="text-right">
            <a href="{{ path('admin.recipe.new') }}" class="btn btn-primary">Créer une nouvelle recette</a>
        </div>
    </div>
    
{% endblock %}