{% extends "base.html.twig" %}

{% block title 'Bienvenue!' %}

{% block head %}
    <style>
        .removebtn {
            color:black;
            position: absolute;
            top: 0;
            right: 0;
            width:13px;
            height: 13px;
            text-align:center;
            border-radius:50%;
            font-size: 10px;
            cursor: pointer;
            background-color: #FFF
        }
    </style>
{% endblock %}


{% block body %}
    <div class="jumbotron text-center" id="bandeauTitre">
        <div class="container">
            <h1>Mes menus faciles</h1>
            <p>Plus de temps perdu à faire les listes de recettes pour la semaine !</p>
        </div>
    </div>

    <div class="container">
        <h2 class="home">Mes dernières recettes publiées</h2>
        <div class="row flex">
            {% for recipe in recipes %}
                <div class="col-md-3 col-sm-5 col-6">
                    {% include 'recipe/_recipe.html.twig' %}
                </div>
            {% endfor %}
        </div>

        <h2 class="home">Mon calendrier de recettes</h2>
        <div class="row">
            <div class="col-md-3 col-12" id='external-events'>
                <p>
                    <strong>Mes recettes</strong>
                </p>
                <div id="accordion">
                    {% for categorie in foodCategories %}
                        <div class="card">
                            <div class="card-header" id="heading{{ categorie.id }}">
                                <h5 class="mb-0">
                                    <button class="btn btn-link" data-toggle="collapse" data-target="#collapse{{ categorie.id }}" aria-expanded="true" aria-controls="collapse{{ categorie.id }}">
                                    {{ categorie.name }}
                                    </button>
                                </h5>
                            </div>

                            <div id="collapse{{ categorie.id }}" class="collapse" aria-labelledby="heading{{ categorie.id }}" data-parent="#accordion">
                                <div class="card-body">
                                    {% for key, recipeCategory in recipeCategories %}
                                        {% if key == categorie.id %}
                                            {% for recipe in recipeCategory %}
                                                <div class='fc-event'>{{ recipe.name }}</div>
                                            {% endfor %}
                                        {% endif %}
                                    {% endfor %}
                                    <p>
                                        <input type='checkbox' id='drop-remove' />
                                        <label for='drop-remove' style="font-size:11px;">Enlever de la liste après sélection</label>
                                    </p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                
            </div>
            <div class="col-md-9 col-12" id='calendar-container'>
                <div id="linksCalendar" style="display:flex;">
                    <a href="{{ path('meal_planning.new') }}" class="btn btn-primary" style="margin-bottom:15px; margin-top:15px;">Ajouter une recette</a>
                    <div id="calendarTrash" class="calendar-trash">
                        <img src="{{ "throw.png" }}" alt="poubelle-icon" width="36" height="36" style="margin-top:15px; margin-bottom: 15px;"/>
                    </div>
                </div>
                <div id="calendar" margin: 25px;>
                    {% include '@Calendar/calendar.html' %}
                </div>
            </div>
        </div>
    </div>

<!-- MODALE ADD AN EVENT -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Nouvel ajout de recette à mon semainier</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="{{ path('meal_planning.new') }}" method="post">
                        <div class="form-group">
                            <label for="recipient-day" class="col-form-label">Jour: <span id="dayModal"></span></label>
                        </div>
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label">Recette:</label>
                            <select class="form-control" id="recipient-name">
                                {% for recipe in allRecipes %}
                                    <option value={{ recipe.id }}>{{ recipe.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-primary" id="addButtonModal">Ajouter</button>
                </div>
            </div>
        </div>
    </div>

<!-- MODALE SHOW A RECIPE -->
    <div class="modal fade" id="showRecipeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Voir la recette ?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <!--<div class="modal-body">
                    <form action="{{ path('meal_planning.new') }}" method="post">
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label">Voir la recette ?</label>
                        </div>
                    </form>
                </div>-->
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary">Supprimer</button>
                    <button type="submit" class="btn btn-primary" id="addButtonRecipeModal">Voir la recette</button>
                </div>
            </div>
        </div>
    </div>

    <footer class="jumbotron" style="margin-top:30px;">
        <div class="container">Pied de page de mon semainier de recettes</div>
    </footer>

{% endblock %}

