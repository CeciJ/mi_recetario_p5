{% extends "base.html.twig" %}

{% block title 'Bienvenue!' %}

{% block body %}
    <div class="jumbotron text-center">
        <div class="container">
            <h1>Mes menus faciles</h1>
            <p>Plus de temps perdu à faire les listes de recettes pour la semaine !</p>
        </div>
    </div>

    <div class="container">
        <h2 class="home">Mes dernières recettes publiées</h2>
        <div class="row flex">
            {% for recipe in recipes %}
                <div class="col-3">
                    {% include 'recipe/_recipe.html.twig' %}
                </div>
            {% endfor %}
        </div>

        <div class="row">
            <div class="col-3" id='external-events'>
                <p>
                    <strong>Mes recettes</strong>
                </p>
                <div id="accordion">
                    {% for categorie in foodCategories %}
                        <div class="card">
                            <div class="card-header" id="heading{{ categorie.id }}">
                                <h5 class="mb-0">
                                    <button class="btn btn-link" data-toggle="collapse" data-target="#collapse{{ categorie.id }}" aria-expanded="true" aria-controls="collapse{{ categorie.id }}">
                                    {{ categorie.name }}
                                    </button>
                                </h5>
                            </div>

                            <div id="collapse{{ categorie.id }}" class="collapse" aria-labelledby="heading{{ categorie.id }}" data-parent="#accordion">
                                <div class="card-body">
                                    {% for key, recipeCategory in recipeCategories %}
                                        {% if key == categorie.id %}
                                            {% for recipe in recipeCategory %}
                                                <div class='fc-event'>{{ recipe.name }}</div>
                                            {% endfor %}
                                        {% endif %}
                                    {% endfor %}
                                    <p>
                                        <input type='checkbox' id='drop-remove' />
                                        <label for='drop-remove'>Enlever de la liste après sélection</label>
                                    </p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                
            </div>
            <div class="col-9" id='calendar-container'>
                <a href="{{ path('meal_planning.new') }}" class="btn btn-primary" style="margin-bottom:15px; margin-top:15px;">Ajouter une recette</a>

                <div id="calendar" margin: 25px;>
                    {% include '@Calendar/calendar.html' %}
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Nouvel ajout de recette à mon semainier</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="{{ path('meal_planning.new') }}" method="post">
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label">Recette:</label>
                            <select class="form-control" id="recipient-name">
                                {% for recipe in allRecipes %}
                                    <option value={{ recipe.name }}>{{ recipe.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="message-text" class="col-form-label">Horaire:</label>
                            <textarea class="form-control" id="message-text"></textarea>
                            <select class="form-control" id="recipient-name">
                                <option value="petit-dej">Petit déjeuner</option>
                                <option value="dej">Déjeuner</option>
                                <option value="gouter">Goûter</option>
                                <option value="diner">Dîner</option>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                    <button type="button" class="btn btn-primary">Ajouter</button>
                </div>
            </div>
        </div>
    </div>

    <footer class="jumbotron" style="margin-top:30px;">
        <div class="container">Pied de page de mon semainier de recettes</div>
    </footer>

{% endblock %}

